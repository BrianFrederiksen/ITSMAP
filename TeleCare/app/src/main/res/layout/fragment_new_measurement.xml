<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/newDateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/newDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Value"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffc43f1a"
            android:visibility="visible"/>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/newWeightInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_weight="0.75"/>
            <EditText
                android:id="@+id/newWeightValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Insert value"
                android:textStyle="italic"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_weight="0.75"/>
            <TextView
                android:id="@+id/newWeightUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kg"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffc43f1a"
            android:visibility="visible"/>

        <!-- Temperature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/newTempInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_weight="0.75"/>
            <EditText
                android:id="@+id/newTempValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert value"
                android:textStyle="italic"
                android:textSize="20sp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_weight="0.75"/>
            <TextView
                android:id="@+id/newTempUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â°C"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffc43f1a"
            android:visibility="visible"/>

        <!-- Diastolic -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/newDbpInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diastolic"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_weight="0.75"/>
            <EditText
                android:id="@+id/newDbpValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert value"
                android:textStyle="italic"
                android:textSize="20sp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_weight="0.75"/>
            <TextView
                android:id="@+id/newDbpUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mm Hg"
                android:textSize="16sp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffc43f1a"
            android:visibility="visible"/>

        <!-- Systolic -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/newSbpInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Systolic"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_weight="0.75"/>
            <EditText
                android:id="@+id/newSbpValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert value"
                android:textStyle="italic"
                android:textSize="20sp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_weight="0.75"/>
            <TextView
                android:id="@+id/newSbpUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mm Hg"
                android:textSize="16sp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffc43f1a"
            android:visibility="visible"/>

        <!-- Glucose -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/newGlucoseInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glucose"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_weight="0.75"/>
            <EditText
                android:id="@+id/newGlucoseValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert value"
                android:textStyle="italic"
                android:textSize="20sp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:layout_weight="0.75"/>
            <TextView
                android:id="@+id/detailGlucoseUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mmol/L"
                android:textSize="16sp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffc43f1a"
            android:visibility="visible"/>

        <!-- Comments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailCommentsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"

                android:layout_weight="0.5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffc43f1a"
                android:visibility="visible"/>
            <EditText
                android:id="@+id/detailCommentsValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insert comments"
                android:textStyle="italic"
                android:textSize="16sp"
                android:gravity="left"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffc43f1a"
                android:visibility="visible"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>